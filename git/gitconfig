[core]
editor = subl -n -w
excludesfile = ~/.gitignore
whitespace = trailing-space

[user]
name = Roger Hutchings
email = roger@hutchin.gs

[alias]

cm = commit

co = checkout

cl = clone

br = branch

d = diff
doff = diff
dc = diff --cached

s = status

pr = pull-request

unstage = reset HEAD
un = unstage

# Trash old branches
# http://pedroreys.com/2012/11/21/git-alias-to-delete-all-local-branches/
tidy = "git checkout master && git branch --merged | grep -v master | xargs git branch -d"

# Undo the last commit
# http://stackoverflow.com/questions/927358/how-to-undo-the-last-git-commit
undo = reset --soft HEAD^

[color]
branch = auto
diff = auto
status = auto

[color "branch"]
current = yellow reverse
local = yellow

[color "diff"]
meta = yellow
frag = magenta bold
old = red bold
new = green

[color "status"]
added = green
changed = yellow
untracked = cyan

[help]
autocorrect = 0

[push]
default = current

[rerere]
enabled = 1

[status]
relativePaths = true

[github]
user = rogerhutchings

[merge]
conflictstyle = diff3
